{
  "name": "restful-students-api",
  "version": "1.0.0",
  "description": "This is a homework assignment in the discipline of Advanced Software Development Techniques, taught by Professor Hudson Silva Borges at FACOM-UFMS.",
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/main/server.ts",
    "ext": "ts, js"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc && tsc-alias",
    "start": "node ./dist/main/server.js",
    "start:dev": "NODE_ENV=development webpack",
    "dev": "nodemon",
    "pretest:watch": "npm run build",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:watch": "jest --watchAll --collectCoverage",
    "lint": "eslint . --ext .ts",
    "typeorm": "node ./node_modules/typeorm/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guilhermercarvalho/ufms-tdsoft-restful-students.git"
  },
  "keywords": [],
  "author": {
    "name": "Guilherme Carvalho",
    "email": "dev.carvalho@protonmail.com"
  },
  "contributors": [
    {
      "name": "Gabriel Costa",
      "email": "gabcostadeveloper@gmail.com"
    }
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/guilhermercarvalho/ufms-tdsoft-restful-students/issues"
  },
  "homepage": "https://github.com/guilhermercarvalho/ufms-tdsoft-restful-students#readme",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "ioredis": "^5.2.3",
    "luxon": "^3.0.4",
    "mysql": "^2.18.1",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.1.1",
    "stoppable": "^1.1.0",
    "supertest": "^6.2.4",
    "tsconfig-paths": "^4.1.0",
    "typeorm": "^0.3.10",
    "uuid": "^7.0.3",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@faker-js/faker": "^7.5.0",
    "@types/express": "^4.17.14",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^29.1.0",
    "@types/luxon": "^3.0.1",
    "@types/node": "^18.7.23",
    "@types/pg": "^8.6.5",
    "@types/sqlite3": "^3.1.8",
    "@types/stoppable": "^1.1.1",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.7",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "babel-jest": "^29.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.1.1",
    "mockdate": "^3.0.5",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.7.0",
    "typescript": "^4.8.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "npm": "9.2.0",
    "node": "16.18.0"
  }
}
