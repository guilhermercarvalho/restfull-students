{
  "name": "restful-students-api",
  "version": "1.0.0",
  "description": "This is a homework assignment in the discipline of Advanced Software Development Techniques, taught by Professor Hudson Silva Borges at FACOM-UFMS.",
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/main/server.ts",
    "ext": "ts, js"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "pretest:watch": "npm run build",
    "clean": "rm -rf ./dist && mkdir ./dist",
    "build": "tsc",
    "dev": "nodemon",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:watch": "jest --watchAll --collectCoverage",
    "lint": "eslint . --ext .ts",
    "typeorm": "typeorm-ts-node-commonjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guilhermercarvalho/ufms-tdsoft-restful-students.git"
  },
  "keywords": [],
  "author": {
    "name": "Guilherme Carvalho",
    "email": "dev.carvalho@protonmail.com"
  },
  "contributors": [
    {
      "name": "Gabriel Costa",
      "email": "gabcostadeveloper@gmail.com"
    }
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/guilhermercarvalho/ufms-tdsoft-restful-students/issues"
  },
  "homepage": "https://github.com/guilhermercarvalho/ufms-tdsoft-restful-students#readme",
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "ioredis": "^4.28.5",
    "luxon": "^3.0.1",
    "module-alias": "^2.2.2",
    "mysql": "^2.18.1",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.2",
    "supertest": "^6.2.2",
    "tsconfig-paths": "^3.14.1",
    "typeorm": "^0.3.5",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@faker-js/faker": "^7.5.0",
    "@types/express": "^4.17.13",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^27.4.1",
    "@types/luxon": "^3.0.0",
    "@types/node": "^17.0.23",
    "@types/pg": "^8.6.5",
    "@types/sqlite3": "^3.1.8",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.5",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "babel-jest": "^27.5.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.1.3",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "mockdate": "^3.0.5",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.3"
  },
  "_moduleAliases": {
    "@": "src"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
